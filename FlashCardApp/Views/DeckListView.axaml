<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:FlashCardApp.ViewModels"
             xmlns:models="using:FlashCardApp.Models"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="FlashCardApp.Views.DeckListView"
             x:DataType="vm:DeckListViewModel"
             Background="#121212">
    
    <Design.DataContext>
        <vm:DeckListViewModel />
    </Design.DataContext>

    <Grid>
        <!-- Header -->
        <TextBlock Text="æˆ‘çš„å–®å­—æœ¬"
                   FontSize="28"
                   FontWeight="Bold"
                   Foreground="White"
                   Margin="20,20,20,0"
                   VerticalAlignment="Top"/>
        
        <!-- Deck List -->
        <ScrollViewer Padding="20,70,20,20" VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding Decks}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Spacing="16"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                
                <ItemsControl.ItemTemplate>
                    <DataTemplate x:DataType="models:Deck">
                        <!-- Clickable Card Container -->
                        <Button Command="{Binding $parent[ItemsControl].((vm:DeckListViewModel)DataContext).ViewDeckCommand}"
                                CommandParameter="{Binding}"
                                HorizontalAlignment="Stretch"
                                HorizontalContentAlignment="Stretch"
                                Padding="0"
                                Background="Transparent"
                                BorderThickness="0"
                                Cursor="Hand">
                            <Border Background="#1E1E1E"
                                    CornerRadius="8"
                                    Padding="15">
                                <Border.Styles>
                                    <Style Selector="Border:pointerover">
                                        <Setter Property="Background" Value="#2A2A2A"/>
                                    </Style>
                                </Border.Styles>
                                <Grid ColumnDefinitions="*,Auto,Auto">
                                    <!-- Deck Info -->
                                    <StackPanel Grid.Column="0" Spacing="8">
                                        <TextBlock Text="{Binding Name}" 
                                                   FontSize="20" 
                                                   FontWeight="SemiBold"
                                                   Foreground="White"/>
                                        <TextBlock FontSize="14"
                                                   Foreground="#A0A0A0">
                                            <Run Text="{Binding ValidCardCount}"/>
                                            <Run Text="å¼µå¡ç‰‡"/>
                                        </TextBlock>
                                    </StackPanel>
                                    
                                    <!-- Edit Button -->
                                    <Button Grid.Column="1"
                                            Command="{Binding $parent[ItemsControl].((vm:DeckListViewModel)DataContext).EditDeckCommand}"
                                            CommandParameter="{Binding}"
                                            Margin="8,0"
                                            Padding="12,8"
                                            Background="#2A2A2A"
                                            BorderBrush="#6200EE"
                                            BorderThickness="1"
                                            CornerRadius="6"
                                            Cursor="Hand"
                                            ToolTip.Tip="ç·¨è¼¯">
                                        <TextBlock Text="âœï¸" 
                                                   FontSize="14"
                                                   Foreground="#6200EE"/>
                                    </Button>
                                    
                                    <!-- Delete Button -->
                                    <Button Grid.Column="2"
                                            Command="{Binding $parent[ItemsControl].((vm:DeckListViewModel)DataContext).DeleteDeckCommand}"
                                            CommandParameter="{Binding}"
                                            Padding="12,8"
                                            Background="#D32F2F"
                                            BorderThickness="0"
                                            CornerRadius="6"
                                            Cursor="Hand"
                                            ToolTip.Tip="åˆªé™¤">
                                        <TextBlock Text="ðŸ—‘ï¸" 
                                                   FontSize="14"
                                                   Foreground="White"/>
                                    </Button>
                                </Grid>
                            </Border>
                        </Button>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Floating Action Button -->
        <Button Command="{Binding AddDeckCommand}"
                Width="56" 
                Height="56"
                CornerRadius="28"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Margin="0,0,24,24"
                Background="#6200EE"
                BorderThickness="0"
                Cursor="Hand"
                ToolTip.Tip="æ–°å¢žå–®å­—æœ¬">
            <TextBlock Text="+" 
                       FontSize="32" 
                       FontWeight="Bold"
                       Foreground="White"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       Margin="0,-4,0,0"/>
        </Button>
    </Grid>
</UserControl>
