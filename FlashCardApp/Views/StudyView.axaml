                                               FontSize="28"
                                               FontWeight="SemiBold"
                                               Foreground="#333333"
                                               TextWrapping="Wrap"
                                               TextAlignment="Center"
                                               MaxWidth="280"
                                               IsVisible="{Binding !IsFlipped}"/>
