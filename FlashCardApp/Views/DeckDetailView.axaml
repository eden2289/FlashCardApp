<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:FlashCardApp.ViewModels"
             xmlns:models="using:FlashCardApp.Models"
             xmlns:controls="using:FlashCardApp.Controls"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="700"
             x:Class="FlashCardApp.Views.DeckDetailView"
             x:DataType="vm:DeckDetailViewModel"
             Background="#121212">
    
    <Design.DataContext>
        <vm:DeckDetailViewModel />
    </Design.DataContext>

    <Grid RowDefinitions="Auto,*">
        
        <!-- Top Bar: Back + Edit -->
        <Grid Grid.Row="0" ColumnDefinitions="Auto,*,Auto" Margin="20,20,20,10">
            <!-- Back Button (Left) -->
            <Button Grid.Column="0"
                    Command="{Binding BackCommand}"
                    Padding="12,8"
                    Background="Transparent"
                    BorderBrush="#666666"
                    BorderThickness="1"
                    CornerRadius="6"
                    Cursor="Hand"
                    HorizontalAlignment="Left"
                    ZIndex="10">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <TextBlock Text="â†" FontSize="16" Foreground="#A0A0A0"/>
                    <TextBlock Text="è¿”å›ž" FontSize="14" Foreground="#A0A0A0"/>
                </StackPanel>
            </Button>

            <!-- Edit Button (Right) -->
            <Button Grid.Column="2"
                    Command="{Binding EditDeckCommand}"
                    Padding="12,8"
                    Background="Transparent"
                    BorderBrush="#666666"
                    BorderThickness="1"
                    CornerRadius="6"
                    Cursor="Hand"
                    HorizontalAlignment="Right"
                    ZIndex="10">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <TextBlock Text="âœŽ" FontSize="16" Foreground="#A0A0A0"/>
                    <TextBlock Text="ç·¨è¼¯" FontSize="14" Foreground="#A0A0A0"/>
                </StackPanel>
            </Button>
        </Grid>

        <!-- Scrollable Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Spacing="20" Margin="20,0,20,20">
                
                <!-- Card Preview Section - Swipeable Carousel -->
                <Border Background="#1A1A1A"
                        CornerRadius="16"
                        Padding="20"
                        MinHeight="260">
                    <Grid RowDefinitions="*,Auto">
                        <!-- Swipeable Cards Container -->
                        <ScrollViewer x:Name="CardScrollViewer"
                                      Grid.Row="0"
                                      HorizontalScrollBarVisibility="Hidden"
                                      VerticalScrollBarVisibility="Disabled"
                                      HorizontalAlignment="Stretch"
                                      IsVisible="{Binding HasCards}">
                            <ItemsControl x:Name="CardsItemsControl" 
                                          ItemsSource="{Binding ValidCards}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Horizontal" Spacing="16"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <controls:FlipCard Width="280" 
                                                           Height="180"
                                                           FrontText="{Binding Front}"
                                                           BackText="{Binding Back}"
                                                           IsInteractive="True"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                        
                        <!-- Card Counter & Hint -->
                        <StackPanel Grid.Row="1" 
                                    HorizontalAlignment="Center" 
                                    Margin="0,16,0,0"
                                    Spacing="4">
                            <TextBlock Text="{Binding PreviewProgress}"
                                       FontSize="14"
                                       Foreground="#A0A0A0"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="â† å·¦å³æ»‘å‹•ç€è¦½ | é»žæ“Šå¡ç‰‡ç¿»è½‰ â†’"
                                       FontSize="11"
                                       Foreground="#555555"
                                       HorizontalAlignment="Center"
                                       IsVisible="{Binding HasCards}"/>
                        </StackPanel>
                        
                        <!-- No Cards State -->
                        <Border Grid.Row="0"
                                IsVisible="{Binding !HasCards}"
                                Background="#2A2A2A"
                                CornerRadius="12"
                                Width="280"
                                Height="180"
                                HorizontalAlignment="Center">
                            <TextBlock Text="å°šç„¡å¡ç‰‡"
                                       FontSize="16"
                                       Foreground="#666666"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Border>
                    </Grid>
                </Border>

                <!-- Deck Info & Actions -->
                <Border Background="#1E1E1E" CornerRadius="12" Padding="20">
                    <StackPanel Spacing="16">
                        <!-- Deck Name -->
                        <StackPanel>
                            <TextBlock Text="{Binding CurrentDeck.Name}" 
                                       FontSize="28" 
                                       FontWeight="Bold"
                                       Foreground="White"/>
                            <TextBlock FontSize="14" Foreground="#A0A0A0" Margin="0,4,0,0">
                                <Run Text="{Binding CurrentDeck.ValidCardCount}"/>
                                <Run Text="å¼µå¡ç‰‡"/>
                            </TextBlock>
                        </StackPanel>
                        
                        <!-- Action Buttons -->
                        <Button Command="{Binding StartStudyCommand}"
                                HorizontalAlignment="Stretch"
                                HorizontalContentAlignment="Center"
                                Padding="20,16"
                                Background="#6200EE"
                                BorderThickness="0"
                                CornerRadius="10"
                                Cursor="Hand">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <TextBlock Text="ðŸ“š" FontSize="20"/>
                                <TextBlock Text="é–‹å§‹å­¸ç¿’" 
                                           FontSize="16" 
                                           FontWeight="SemiBold"
                                           Foreground="White"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Border>

                <!-- Cards List (Detailed) -->
                <Border Background="#1A1A1A" CornerRadius="12" Padding="16">
                    <StackPanel>
                        <TextBlock Text="å–®å­—åˆ—è¡¨" 
                                   FontSize="18" 
                                   FontWeight="SemiBold"
                                   Foreground="White"
                                   Margin="4,0,0,12"/>
                        
                        <ItemsControl ItemsSource="{Binding CurrentDeck.Cards}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Spacing="8"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            
                            <ItemsControl.ItemTemplate>
                                <DataTemplate x:DataType="models:Flashcard">
                                    <Border Background="#252525"
                                            CornerRadius="8"
                                            Padding="16,12"
                                            IsVisible="{Binding Front, Converter={x:Static StringConverters.IsNotNullOrEmpty}}">
                                        <Grid ColumnDefinitions="*,Auto,*">
                                            <!-- Front (è©žèªž) -->
                                            <TextBlock Grid.Column="0"
                                                       Text="{Binding Front}"
                                                       FontSize="15"
                                                       FontWeight="SemiBold"
                                                       Foreground="White"
                                                       VerticalAlignment="Center"
                                                       TextWrapping="Wrap"/>
                                            
                                            <!-- Divider -->
                                            <Border Grid.Column="1"
                                                    Width="1"
                                                    Background="#444444"
                                                    Margin="16,0"/>
                                            
                                            <!-- Back (å®šç¾©) -->
                                            <TextBlock Grid.Column="2"
                                                       Text="{Binding Back}"
                                                       FontSize="14"
                                                       Foreground="#A0A0A0"
                                                       VerticalAlignment="Center"
                                                       TextWrapping="Wrap"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>
                
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
