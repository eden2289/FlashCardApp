<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Design.PreviewWith>
        <Border Padding="20">
            <!-- Add Controls for Previewer Here -->
        </Border>
    </Design.PreviewWith>

    <!-- Add Styles Here -->
    
    <!-- Card Main view - Dark Theme with visible border and shadow -->
    <Style Selector="Border.card">
        <Setter Property="Background" Value="#181818"></Setter>
        <Setter Property="BorderBrush" Value="#666666"></Setter>
        <Setter Property="BorderThickness" Value="2"></Setter>
        <Setter Property="CornerRadius" Value="16"></Setter>
        <Setter Property="Padding" Value="30"></Setter>
        <Setter Property="Cursor" Value="Hand"></Setter>
        <Setter Property="BoxShadow" Value="0 10 40 0 #99000000, inset 0 1 0 0 #333333"></Setter>
    </Style>
    
    <!-- The effect when cursor move into the card region -->
    <Style Selector="Border.card:pointerover">
        <Setter Property="BorderBrush" Value="#9C7CFF"></Setter>
        <Setter Property="BoxShadow" Value="0 10 40 0 #709C7CFF, inset 0 1 0 0 #444444"></Setter>
    </Style>
    
    <!-- The text view in the card -->
    <Style Selector="TextBlock.content">
        <Setter Property="FontSize" Value="24"></Setter>
        <Setter Property="TextWrapping" Value="Wrap"></Setter>
        <Setter Property="TextAlignment" Value="Center"></Setter>
        <Setter Property="VerticalAlignment" Value="Center"></Setter>
        <Setter Property="HorizontalAlignment" Value="Center"></Setter>
        <Setter Property="Foreground" Value="#E0E0E0"></Setter>
    </Style>
    
    <!-- view of label -->
    <Style Selector="TextBlock.label">
        <Setter Property="FontSize" Value="14"></Setter>
        <Setter Property="Foreground" Value="#888888"></Setter>
        <Setter Property="HorizontalAlignment" Value="Center"></Setter>
        <Setter Property="VerticalAlignment" Value="Center"></Setter>
        <Setter Property="Margin" Value="0,0,0,10"></Setter>
    </Style>
    
</Styles>
